@model EditViewModel


<h2>Edit User</h2>
<hr>
<form asp-action="Edit" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <input type="hidden" name="Id" value="@Model.Id">
    <div class="mb-3">
        <label asp-for="@Model.FullName"></label>
        <input asp-for="@Model.FullName" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Email"></label>
        <input asp-for="@Model.Email" class="form-control">
    </div>
    <div class="card ">
        <div class="card-header">
            Parola Guncelle
        </div>
        <div class="card-body">
            <div class="mb-3">
            <label asp-for="@Model.Password"></label>
            <input asp-for="@Model.Password" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="@Model.ConfirmPassword"></label>
            <input asp-for="@Model.ConfirmPassword" class="form-control">
        </div>
        </div>
        
    </div>
    
    <button class="btn btn-primary" type="submit">Kaydet</button>
</form>