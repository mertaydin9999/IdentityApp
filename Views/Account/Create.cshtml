@model CreateViewModel


<h2>Create User</h2>
<hr>
<form asp-controller="Account" asp-action="Create" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="@Model.UserName"></label>
        <input asp-for="@Model.UserName" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="@Model.FullName"></label>
        <input asp-for="@Model.FullName" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Email"></label>
        <input asp-for="@Model.Email" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Password"></label>
        <input asp-for="@Model.Password" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="@Model.ConfirmPassword"></label>
        <input asp-for="@Model.ConfirmPassword" class="form-control">
    </div>
    <button class="btn btn-primary" type="submit">Kaydet</button>
</form>